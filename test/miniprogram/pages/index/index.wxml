
<view class="index">
    
    <view class="index-column">
        <!--chunk1-->
        <!--background-color-->
        <view style='background-color:#8f202e'>
            
            <!--LOGO-->
            <view class="index-head" style='background-color:#8f202e'>
               <image class="index-logo" src="../../image/logo.png"></image>
            </view>
            
            <!--搜索框-->
            <view class='page_row' style='background-color:#8f202e' bindtap="suo">
                <view class="search">
                    <view class="search_arr"  style='background-color:white'>
                        <icon class="searchcion" size='18' type='search'></icon>
                        <input clsaa="" placeholder="搜索"/>
                    </view>
                </view>
            </view>

        </view>

        <!--chunk2-->
        <!--留空-->
        <view style='height:15rpx;background-color:#8f202e'></view>

        <!--chunk3-->
        <!--横向布局块-->
        <!--background-color-->
        <view class='index-row' style='background-color:#FFFFFF'>

            <!--日期选择-->
            <view>
                <picker mode="date" value="{{date}}" start="2017-09-1" end="2018-9-1" bindchange="bindDateChange">
                    <view class='date-size' style='width:180rpx;height:50rpx'>{{date}}</view>
                </picker>
            </view>
            <view>-</view>
            <view class='time-size' style='width:160rpx;height:50rpx'>{{time}}</view>
            <view class=''>■    |</view>

            <!--升降序-->
            <view>
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                   <view class='date-size' style='width:100rpx;height:50rpx'>{{array[index]}}</view>
                </picker>
            </view>
            <view>■ |</view>

            <!--筛选-->


        </view>

        <!--chunk4-->
        <!--分割线-->
        
        <view style='background-color:#dbdbdb;height:3rpx'></view>
        
        <!--chunk5-->
        <!--失物信息列表-->
        <!--横向布局块-->
        <view class='index-row' style='background-color:#FFFFFF'>
           
           <!--图片区-->
            <view class="index-row">
                <view  style="height:200rpx;width:100%">
                    <view class="image-lost" style='height:160rpx;width:160rpx'>
                        <image src="../../image/text1.jpg" style='height:160rpx;width:160rpx'></image>
                    </view>
                </view>
            </view>

            <!--name-->
            <view class='name-lost' style='width:300rpx'>Cosmos</view>

            <!--纵向区-->
            <!--addr,time-->
            <view class="index-row">
                <view>
                    <view class='time-lost'>■  {{time}}</view>
                    <view class='addr-lost'>■  一期食堂</view>
                </view>

            </view>

         </view>
    
    
    </view>
    


    
    <view class="index-row">
        <view  style="background-color:#Ff202e;height:200rpx;width:100%">box2</view>
    </view>



</view>